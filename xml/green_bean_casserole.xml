  <recipe title="Green Bean Casserole">
    <source>Alison William's Mom</source>
    <ingredients>
      <choices>
        <choice>
          <ingredient name="frozen green beans">
    	    <measure qty="32" unit="ounce"/>
          </ingredient>
        </choice>
        <choice>
          <ingredient name="green beans">
            <measure-range>
    	      <min-measure qty="4" unit="can"/>
    	      <max-measure qty="5" unit="can"/>
            </measure-range>
          </ingredient>
        </choice>
      </choices>
      <ingredient name="cream of mushroom soup">
    	<measure qty="1" unit="can"/>
      </ingredient>
      <ingredient name="milk">
    	<measure qty="3/4" unit="cup"/>
      </ingredient>
      <ingredient name="french fried onion rings">
    	<measure qty="1" unit="can"/>
      </ingredient>
      <ingredient name="real bacon bits">
    	<measure qty="3" unit="ounce"/>
      </ingredient>
      <ingredient name="pepper">
    	<measure qty="1/8" unit="teaspoon"/>
      </ingredient>
    </ingredients>
    <steps>
      <step>Thaw and drain green beans</step>
      <step>Heat oven to 350Â°F.</step>
      <step>In bowl, combine beans, soup, milk, 1/2 can cnion rings, 1/2 of
            bacon bits, and pepper.</step>
      <step>Pour into 1 1/2 quart casserole.</step>
      <step>Bake for 30 minutes.</step>
      <step>Top with remaining onions and bacon bits. Bake 5 minutes longer.</step>
    </steps>
  </recipe>
